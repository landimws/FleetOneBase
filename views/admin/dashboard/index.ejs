<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Visão Geral</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">
            <i class="bi bi-calendar"></i> Esta semana
        </button>
    </div>
</div>

<!-- KPIs Cards -->
<div class="row g-4 mb-4">
    <!-- Total Empresas -->
    <div class="col-12 col-md-6 col-xl-3">
        <div class="card h-100 border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <h6 class="card-subtitle text-muted text-uppercase fw-bold ls-1" style="font-size: 0.75rem;">Total
                        de Empresas</h6>
                    <div class="icon-box bg-primary bg-opacity-10 text-primary rounded-circle p-2">
                        <i class="bi bi-building fs-4"></i>
                    </div>
                </div>
                <h2 class="card-title display-6 fw-bold mb-0">
                    <%= kpis.totalEmpresas %>
                </h2>
                <div class="mt-2 text-muted small">
                    <span class="text-success fw-bold"><i class="bi bi-arrow-up-short"></i> 100%</span> desde o início
                </div>
            </div>
        </div>
    </div>

    <!-- Empresas Ativas -->
    <div class="col-12 col-md-6 col-xl-3">
        <div class="card h-100 border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <h6 class="card-subtitle text-muted text-uppercase fw-bold ls-1" style="font-size: 0.75rem;">
                        Empresas Ativas</h6>
                    <div class="icon-box bg-success bg-opacity-10 text-success rounded-circle p-2">
                        <i class="bi bi-check-circle fs-4"></i>
                    </div>
                </div>
                <h2 class="card-title display-6 fw-bold mb-0">
                    <%= kpis.empresasAtivas %>
                </h2>
                <div class="mt-2 text-muted small">
                    <span class="text-danger fw-bold">
                        <%= kpis.empresasCanceladas %>
                    </span> canceladas
                </div>
            </div>
        </div>
    </div>

    <!-- MRR (Receita) -->
    <div class="col-12 col-md-6 col-xl-3">
        <div class="card h-100 border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <h6 class="card-subtitle text-muted text-uppercase fw-bold ls-1" style="font-size: 0.75rem;">MRR
                        Estimado</h6>
                    <div class="icon-box bg-info bg-opacity-10 text-info rounded-circle p-2">
                        <i class="bi bi-currency-dollar fs-4"></i>
                    </div>
                </div>
                <h2 class="card-title display-6 fw-bold mb-0">
                    <small style="font-size: 0.5em">R$</small>
                    <%= kpis.mrr.toLocaleString('pt-BR', { minimumFractionDigits: 2 }) %>
                </h2>
                <div class="mt-2 text-muted small">
                    Ticket Médio: <strong>R$ <%= kpis.ticketMedio.toLocaleString('pt-BR', { minimumFractionDigits: 2 })
                            %></strong>
                </div>
            </div>
        </div>
    </div>

    <!-- Total Usuários -->
    <div class="col-12 col-md-6 col-xl-3">
        <div class="card h-100 border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <h6 class="card-subtitle text-muted text-uppercase fw-bold ls-1" style="font-size: 0.75rem;">
                        Usuários Totais</h6>
                    <div class="icon-box bg-warning bg-opacity-10 text-warning rounded-circle p-2">
                        <i class="bi bi-people fs-4"></i>
                    </div>
                </div>
                <h2 class="card-title display-6 fw-bold mb-0">
                    <%= kpis.totalUsuarios %>
                </h2>
                <div class="mt-2 text-muted small">
                    Em todas as empresas
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Planos Distribution -->
<div class="row">
    <div class="col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent border-0 d-flex justify-content-between align-items-center">
                <h6 class="card-title mb-0 fw-bold">Distribuição de Planos</h6>
                <button class="btn btn-sm btn-light"><i class="bi bi-three-dots"></i></button>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-borderless align-middle">
                        <tbody>
                            <% Object.keys(distribuicaoPlanos).forEach(plano=> {
                                const qtd = distribuicaoPlanos[plano];
                                const pct = (qtd / kpis.empresasAtivas * 100).toFixed(1);
                                %>
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="rounded-circle bg-primary"
                                                style="width: 10px; height: 10px; margin-right: 10px;"></div>
                                            <strong>
                                                <%= plano %>
                                            </strong>
                                        </div>
                                    </td>
                                    <td class="text-end fw-bold">
                                        <%= qtd %>
                                    </td>
                                    <td class="text-end text-muted small" style="width: 60px;">
                                        <%= pct %>%
                                    </td>
                                    <td style="width: 100px;">
                                        <div class="progress" style="height: 6px;">
                                            <div class="progress-bar" role="progressbar" style="width: <%= pct %>%"
                                                aria-valuenow="<%= pct %>" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                </div>
                <% if (Object.keys(distribuicaoPlanos).length===0) { %>
                    <div class="text-center text-muted py-4">
                        Nenhum plano ativo encontrado.
                    </div>
                    <% } %>
            </div>
        </div>
    </div>

    <!-- Next Steps Placeholder -->
    <div class="col-md-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body d-flex flex-column justify-content-center align-items-center text-center p-5">
                <div class="bg-light rounded-circle p-4 mb-3">
                    <i class="bi bi-bar-chart-line fs-1 text-muted"></i>
                </div>
                <h5 class="fw-bold text-muted">Mais métricas em breve</h5>
                <p class="text-muted small mb-0">Gráficos de crescimento e churn serão adicionados aqui.</p>
            </div>
        </div>
    </div>
</div>