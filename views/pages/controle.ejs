<%- contentFor('body') %>

    <!-- Tailwind CSS (CDN) - Scoped to avoid breaking legacy styles -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            corePlugins: {
                preflight: false, // Disable global reset to protect sidebar/header legacy styles
            }
        }
    </script>

    <style>
        /* Fix for Tailwind having preflight disabled */
        .border-b,
        .border-t,
        .border-l,
        .border-r,
        .border {
            border-style: solid;
        }

        /* Custom Scrollbar */
        .custom-scrollbar::-webkit-scrollbar {
            width: 6px;
            height: 6px;
        }

        .custom-scrollbar::-webkit-scrollbar-track {
            background: #f1f5f9;
        }

        .custom-scrollbar::-webkit-scrollbar-thumb {
            background: #cbd5e1;
            border-radius: 3px;
        }

        .custom-scrollbar::-webkit-scrollbar-thumb:hover {
            background: #94a3b8;
        }
    </style>

    <div class="flex flex-col h-screen bg-gray-50">
        <!-- Header -->
        <header class="bg-white border-b border-gray-200 px-6 py-4 flex justify-between items-center shadow-sm">
            <div class="flex items-center gap-2 bg-gray-100/50 p-1 rounded-lg">
                <button id="tabBtnControle" onclick="switchTab('controle')"
                    class="px-4 py-2 text-sm font-medium rounded-md bg-white text-blue-600 shadow-sm transition-all flex items-center gap-2">
                    <i class="ph ph-table"></i> Controle
                </button>
                <button id="tabBtnAnalises" onclick="switchTab('analises')"
                    class="px-4 py-2 text-sm font-medium rounded-md text-gray-500 hover:text-gray-700 hover:bg-gray-200/50 transition-all flex items-center gap-2">
                    <i class="ph ph-chart-line-up"></i> Inteligência
                </button>
            </div>

            <div class="flex items-center gap-3">
                <select id="selectSemana"
                    class="form-select pl-3 pr-10 py-2 border-gray-300 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm rounded-md shadow-sm transition-all duration-200">
                    <option value="">Carregando semanas...</option>
                </select>
                <button id="btnNovaSemana"
                    class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg text-sm font-medium shadow-sm transition-colors duration-200 flex items-center gap-2">
                    <i class="ph ph-plus-circle text-lg"></i>
                    Nova Semana
                </button>
                <button id="btnFecharSemana"
                    class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg text-sm font-medium shadow-sm transition-colors duration-200 hidden flex items-center gap-2">
                    <i class="ph ph-check-circle text-lg"></i>
                    Fechar Semana
                </button>
                <button id="btnExcluirSemana"
                    class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-lg text-sm font-medium shadow-sm transition-colors duration-200 hidden flex items-center gap-2">
                    <i class="ph ph-trash text-lg"></i>
                    Excluir
                </button>
            </div>
        </header>

        <!-- Main Content -->
        <main class="flex-1 overflow-hidden p-6 relative">
            <!-- TAB: CONTROLE -->
            <div id="tab-controle" class="h-full flex flex-col">
                <div class="bg-white rounded-xl shadow-sm border border-gray-200 h-full flex flex-col overflow-hidden">
                    <!-- Toolbar -->
                    <div class="p-4 border-b border-gray-100 flex justify-between items-center bg-gray-50/50">
                        <div class="flex items-center gap-4">
                            <div class="relative">
                                <i
                                    class="ph ph-magnifying-glass absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                                <input type="text" id="searchInput" placeholder="Buscar veículo ou cliente..."
                                    class="pl-10 pr-4 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-blue-500 focus:border-transparent w-64 shadow-sm">
                            </div>
                            <div class="flex items-center gap-2 text-sm text-gray-600">
                                <span class="w-3 h-3 rounded-full bg-red-100 border border-red-300 block"></span> =
                                Alerta
                                <span
                                    class="w-3 h-3 rounded-full bg-yellow-100 border border-yellow-300 block ml-2"></span>
                                = Oficina
                                <span
                                    class="w-3 h-3 rounded-full bg-green-100 border border-green-300 block ml-2"></span>
                                =
                                Revisado
                            </div>
                        </div>
                        <div class="text-sm text-gray-500" id="gridStats">
                            Carregando dados...
                        </div>
                    </div>

                    <!-- Table Container -->
                    <div class="overflow-auto flex-1 custom-scrollbar">
                        <table class="min-w-full divide-y divide-gray-200" id="controleTable">
                            <thead class="bg-gray-50 sticky top-0 z-10 shadow-sm">
                                <tr>
                                    <th scope="col"
                                        class="px-3 py-1 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider w-24">
                                        Veículo</th>
                                    <th scope="col"
                                        class="px-3 py-1 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider w-32">
                                        Modelo</th>
                                    <th scope="col"
                                        class="px-3 py-1 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider w-40">
                                        Cliente (Dia 7)</th>
                                    <th scope="col"
                                        class="px-3 py-1 text-center text-xs font-semibold text-gray-500 uppercase tracking-wider w-28">
                                        Km Anterior</th>
                                    <th scope="col"
                                        class="px-3 py-1 text-center text-xs font-semibold text-gray-500 uppercase tracking-wider w-28">
                                        Km Atual</th>
                                    <th scope="col"
                                        class="px-3 py-1 text-center text-xs font-semibold text-gray-500 uppercase tracking-wider w-28">
                                        Rodados</th>
                                    <th scope="col"
                                        class="px-3 py-1 text-center text-xs font-semibold text-gray-500 uppercase tracking-wider w-32">
                                        Situação</th>
                                    <th scope="col"
                                        class="px-3 py-1 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">
                                        Ações</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-100" id="controleBody">
                                <!-- Rows rendered via JS -->
                            </tbody>
                        </table>
                    </div>

                    <!-- Empty State -->
                    <div id="emptyState"
                        class="hidden flex flex-col items-center justify-center h-full text-center pb-20">
                        <div class="bg-gray-100 p-6 rounded-full mb-4">
                            <i class="ph ph-steering-wheel text-4xl text-gray-400"></i>
                        </div>
                        <h3 class="text-lg font-medium text-gray-900" id="emptyStateTitle">Selecione uma semana</h3>
                        <p class="text-gray-500 mt-1 max-w-sm" id="emptyStateMsg">Escolha uma semana existente no topo
                            ou
                            crie uma nova para começar.</p>

                        <button id="btnInicializarSemana"
                            class="mt-6 bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg text-sm font-medium shadow-sm transition-colors duration-200 hidden flex items-center gap-2">
                            <i class="ph ph-play-circle text-lg"></i>
                            Iniciar Controle da Semana
                        </button>
                    </div>

                    <!-- Empty State -->
                    <div id="emptyState"
                        class="hidden flex flex-col items-center justify-center h-full text-center pb-20">
                        <div class="bg-gray-100 p-6 rounded-full mb-4">
                            <i class="ph ph-steering-wheel text-4xl text-gray-400"></i>
                        </div>
                        <h3 class="text-lg font-medium text-gray-900" id="emptyStateTitle">Selecione uma semana</h3>
                        <p class="text-gray-500 mt-1 max-w-sm" id="emptyStateMsg">Escolha uma semana existente no topo
                            ou
                            crie uma nova para começar.</p>

                        <button id="btnInicializarSemana"
                            class="mt-6 bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg text-sm font-medium shadow-sm transition-colors duration-200 hidden flex items-center gap-2">
                            <i class="ph ph-play-circle text-lg"></i>
                            Iniciar Controle da Semana
                        </button>
                    </div>
                </div>
            </div> <!-- End Tab Controle -->

            <!-- TAB: INTELIGÊNCIA -->
            <div id="tab-analises" class="hidden h-full overflow-y-auto custom-scrollbar">

                <!-- KPIs -->
                <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-6">
                    <!-- Total Km -->
                    <div class="bg-white p-5 rounded-2xl border border-gray-100 shadow-sm relative overflow-hidden">
                        <div class="absolute right-[-10px] top-[-10px] bg-blue-50 w-24 h-24 rounded-full opacity-50">
                        </div>
                        <p class="text-sm font-medium text-gray-500 uppercase tracking-wider relative z-10">Km Rodados
                            na Semana</p>
                        <h3 class="text-3xl font-black text-gray-800 mt-1 relative z-10" id="kpiTotalKm">---</h3>
                        <p class="text-xs text-blue-600 mt-2 font-medium flex items-center gap-1 relative z-10">
                            <i class="ph-fill ph-road-horizon"></i> Total da Frota
                        </p>
                    </div>

                    <!-- Média por Veículo -->
                    <div class="bg-white p-5 rounded-2xl border border-gray-100 shadow-sm relative overflow-hidden">
                        <div class="absolute right-[-10px] top-[-10px] bg-green-50 w-24 h-24 rounded-full opacity-50">
                        </div>
                        <p class="text-sm font-medium text-gray-500 uppercase tracking-wider relative z-10">Média por
                            Veículo</p>
                        <h3 class="text-3xl font-black text-gray-800 mt-1 relative z-10" id="kpiMediaKm">---</h3>
                        <p class="text-xs text-green-600 mt-2 font-medium flex items-center gap-1 relative z-10">
                            <i class="ph-fill ph-chart-bar"></i> Km / Carro
                        </p>
                    </div>

                    <!-- Alertas Críticos -->
                    <div class="bg-white p-5 rounded-2xl border border-gray-100 shadow-sm relative overflow-hidden">
                        <div class="absolute right-[-10px] top-[-10px] bg-red-50 w-24 h-24 rounded-full opacity-50">
                        </div>
                        <p class="text-sm font-medium text-gray-500 uppercase tracking-wider relative z-10">Alertas
                            Críticos</p>
                        <h3 class="text-3xl font-black text-gray-800 mt-1 relative z-10" id="kpiAlertas">---</h3>
                        <p class="text-xs text-red-600 mt-2 font-medium flex items-center gap-1 relative z-10">
                            <i class="ph-fill ph-warning-circle"></i> Óleo / Correia / Pacote
                        </p>
                    </div>

                    <!-- Eficiência de Frota -->
                    <div class="bg-white p-5 rounded-2xl border border-gray-100 shadow-sm relative overflow-hidden">
                        <div class="absolute right-[-10px] top-[-10px] bg-purple-50 w-24 h-24 rounded-full opacity-50">
                        </div>
                        <p class="text-sm font-medium text-gray-500 uppercase tracking-wider relative z-10">Veículos
                            Ativos</p>
                        <h3 class="text-3xl font-black text-gray-800 mt-1 relative z-10" id="kpiAtivos">---</h3>
                        <p class="text-xs text-purple-600 mt-2 font-medium flex items-center gap-1 relative z-10">
                            <i class="ph-fill ph-check-circle"></i> Em operação
                        </p>
                    </div>
                </div>

                <!-- Charts Section -->
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
                    <!-- Top 5 Km -->
                    <div class="bg-white p-6 rounded-2xl border border-gray-100 shadow-sm">
                        <div class="flex justify-between items-center mb-6">
                            <h3 class="font-bold text-gray-800 flex items-center gap-2">
                                <div
                                    class="w-8 h-8 rounded-lg bg-blue-100 text-blue-600 flex items-center justify-center">
                                    <i class="ph-fill ph-ranking"></i>
                                </div>
                                Top 5 - Maior Rodagem
                            </h3>
                        </div>
                        <div class="relative h-64">
                            <canvas id="chartTopKm"></canvas>
                        </div>
                    </div>

                    <!-- Distribuição de Status -->
                    <div class="bg-white p-6 rounded-2xl border border-gray-100 shadow-sm">
                        <div class="flex justify-between items-center mb-6">
                            <h3 class="font-bold text-gray-800 flex items-center gap-2">
                                <div
                                    class="w-8 h-8 rounded-lg bg-orange-100 text-orange-600 flex items-center justify-center">
                                    <i class="ph-fill ph-pie-chart"></i>
                                </div>
                                Situação da Frota
                            </h3>
                        </div>
                        <div class="relative h-64 flex justify-center">
                            <canvas id="chartStatus"></canvas>
                        </div>
                    </div>
                </div>

                <!-- Detalhamento de Manutenções -->
                <div class="bg-white rounded-2xl border border-gray-100 shadow-sm overflow-hidden mb-6">
                    <div class="p-6 border-b border-gray-50 flex justify-between items-center">
                        <h3 class="font-bold text-gray-800 flex items-center gap-2">
                            <div class="w-8 h-8 rounded-lg bg-red-100 text-red-600 flex items-center justify-center">
                                <i class="ph-fill ph-wrench"></i>
                            </div>
                            Próximas Manutenções (Críticas)
                        </h3>
                    </div>
                    <div class="overflow-x-auto">
                        <table class="w-full text-sm text-left">
                            <thead class="bg-gray-50 text-gray-500 font-medium uppercase text-xs">
                                <tr>
                                    <th class="px-6 py-3">Veículo</th>
                                    <th class="px-6 py-3">Tipo</th>
                                    <th class="px-6 py-3">Km Atual</th>
                                    <th class="px-6 py-3">Próxima Troca</th>
                                    <th class="px-6 py-3">Status</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-50" id="tabelaManutencoes">
                                <!-- JS Populated -->
                            </tbody>
                        </table>
                    </div>
                </div>

            </div> <!-- End Tab Analises -->
        </main>
    </div>

    <!-- Scripts -->

    <!-- Modal Nova Semana (Confirm) -->
    <div id="modalNovaSemana" class="fixed inset-0 z-[3000] hidden" aria-labelledby="modal-title" role="dialog"
        aria-modal="true">
        <!-- Backdrop -->
        <div class="fixed inset-0 bg-gray-900/60 backdrop-blur-sm transition-opacity"></div>

        <div class="fixed inset-0 z-10 overflow-y-auto">
            <div class="flex min-h-full items-center justify-center p-4 text-center">
                <div
                    class="relative transform overflow-hidden rounded-2xl bg-white text-left shadow-2xl transition-all sm:w-full sm:max-w-sm border border-gray-100">
                    <div class="bg-white px-6 pb-6 pt-6">
                        <div class="text-center">
                            <div
                                class="mx-auto flex items-center justify-center h-14 w-14 rounded-full bg-blue-50 mb-5 ring-4 ring-blue-50/50">
                                <i class="ph ph-calendar-plus text-3xl text-blue-600"></i>
                            </div>
                            <h3 class="text-xl leading-6 font-bold text-gray-900" id="modalNovaSemanaTitle">Iniciar Nova
                                Semana</h3>
                            <div class="mt-3">
                                <p class="text-sm text-gray-500" id="modalNovaSemanaMsg">
                                    Próxima semana encontrada: <br>
                                    <span
                                        class="font-bold text-gray-800 text-lg block mt-2 p-2 bg-gray-50 rounded-lg border border-gray-100"
                                        id="modalNovaSemanaDate">--/-- a --/--</span>
                                </p>
                                <p class="text-xs text-gray-400 mt-3 px-4">Isso importará automaticamente os veículos
                                    ativos e suas configurações.</p>
                            </div>
                        </div>
                    </div>
                    <div class="bg-gray-50/50 px-6 py-4 sm:flex sm:flex-row-reverse sm:px-6 gap-3">
                        <button type="button" id="btnConfirmarNovaSemana"
                            class="inline-flex w-full justify-center rounded-xl bg-blue-600 px-4 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 sm:w-auto transition-transform active:scale-95">
                            Iniciar
                        </button>
                        <button type="button" onclick="closeModal('modalNovaSemana')"
                            class="mt-3 inline-flex w-full justify-center rounded-xl bg-white px-4 py-2.5 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:mt-0 sm:w-auto transition-transform active:scale-95">
                            Cancelar
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="/js/controle.js"></script>

    <!-- ==========================================
         MODAIS GLOBAIS (Z-Index Elevado)
         ========================================== -->

    <!-- MODAL: REGISTRAR KM -->
    <div id="modalKm" class="fixed inset-0 z-[3000] hidden" aria-labelledby="modal-title" role="dialog"
        aria-modal="true">
        <div class="fixed inset-0 bg-gray-900/60 backdrop-blur-sm transition-opacity"></div>
        <div class="fixed inset-0 z-10 overflow-y-auto">
            <div class="flex min-h-full items-center justify-center p-4 text-center">
                <div
                    class="relative transform overflow-hidden rounded-2xl bg-white text-left shadow-2xl transition-all sm:w-full sm:max-w-lg border border-gray-100">
                    <div class="bg-white px-6 pb-6 pt-6">
                        <div class="flex items-center gap-4 mb-5 border-b border-gray-100 pb-4">
                            <div
                                class="h-10 w-10 rounded-full bg-blue-50 flex items-center justify-center text-blue-600">
                                <i class="ph ph-gauge text-xl"></i>
                            </div>
                            <h3 class="text-lg font-bold leading-6 text-gray-900" id="modal-title-km">Registrar Km</h3>
                        </div>

                        <div class="space-y-5">
                            <input type="hidden" id="kmRegistroId">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Km Atual</label>
                                <div class="relative rounded-md shadow-sm">
                                    <input type="text" id="inputKmAtual" oninput="maskNumber(this)"
                                        class="block w-full rounded-xl border-gray-300 py-3 pl-4 pr-12 focus:border-blue-500 focus:ring-blue-500 sm:text-sm shadow-sm transition-colors bg-gray-50/50 hover:bg-white"
                                        placeholder="000.000">
                                    <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
                                        <span class="text-gray-500 sm:text-sm">km</span>
                                    </div>
                                </div>
                                <p class="text-xs text-gray-500 mt-2 flex items-center gap-1">
                                    <i class="ph ph-clock-counter-clockwise"></i> Anterior: <span id="labelKmAnterior"
                                        class="font-semibold text-gray-700">--</span>
                                </p>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Data do Registro</label>
                                <input type="datetime-local" id="inputDataKm"
                                    class="block w-full rounded-xl border-gray-300 py-2.5 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm bg-gray-50/50 hover:bg-white transition-colors">
                            </div>
                            <div id="fieldMotivoKm" class="hidden">
                                <label class="block text-sm font-medium text-gray-700 mb-1">Motivo da Correção <span
                                        class="text-red-500">*</span></label>
                                <input type="text" id="inputMotivoKm" placeholder="Ex: Erro de digitação"
                                    class="block w-full rounded-xl border-gray-300 py-2.5 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm bg-gray-50/50 hover:bg-white transition-colors">
                            </div>
                        </div>
                    </div>
                    <div class="bg-gray-50/50 px-6 py-4 sm:flex sm:flex-row-reverse sm:px-6 gap-3">
                        <button type="button" id="btnSalvarKm"
                            class="inline-flex w-full justify-center rounded-xl bg-blue-600 px-4 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 sm:w-auto transition-transform active:scale-95">
                            Salvar Registro
                        </button>
                        <button type="button" onclick="closeModal('modalKm')"
                            class="mt-3 inline-flex w-full justify-center rounded-xl bg-white px-4 py-2.5 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:mt-0 sm:w-auto transition-transform active:scale-95">
                            Cancelar
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- MODAL: SERVIÇO -->
    <div id="modalServico" class="fixed inset-0 z-[3000] hidden overflow-y-auto" role="dialog" aria-modal="true">
        <div class="fixed inset-0 bg-gray-900/60 backdrop-blur-sm transition-opacity"></div>
        <div class="flex min-h-full items-center justify-center p-4">
            <div
                class="bg-white rounded-2xl shadow-2xl max-w-md w-full p-6 relative transform transition-all border border-gray-100">
                <button onclick="closeModal('modalServico')"
                    class="absolute top-4 right-4 text-gray-400 hover:text-gray-600 transition-colors bg-gray-50 p-1 rounded-full hover:bg-gray-100">
                    <i class="ph ph-x text-lg"></i>
                </button>

                <div class="flex items-center gap-3 mb-6">
                    <div class="h-10 w-10 rounded-full bg-orange-50 flex items-center justify-center text-orange-600">
                        <i class="ph ph-wrench text-xl"></i>
                    </div>
                    <h3 class="text-xl font-bold text-gray-900" id="modalTitleServico">Gestão de Serviço</h3>
                </div>

                <div id="servicoStep1" class="animate-fade-in-up">
                    <div class="grid grid-cols-2 gap-4">
                        <button onclick="showServicoForm('entrada')"
                            class="flex flex-col items-center justify-center p-6 border border-gray-200 rounded-xl hover:border-blue-500 hover:bg-blue-50/50 hover:shadow-md transition-all gap-3 group bg-white">
                            <div
                                class="h-12 w-12 rounded-full bg-blue-100 text-blue-600 flex items-center justify-center group-hover:scale-110 transition-transform">
                                <i class="ph ph-arrow-right-in text-2xl"></i>
                            </div>
                            <span class="font-semibold text-gray-700 group-hover:text-blue-700">Entrada<br><span
                                    class="text-xs font-normal text-gray-500">(Oficina)</span></span>
                        </button>
                        <button onclick="showServicoForm('saida')"
                            class="flex flex-col items-center justify-center p-6 border border-gray-200 rounded-xl hover:border-green-500 hover:bg-green-50/50 hover:shadow-md transition-all gap-3 group bg-white">
                            <div
                                class="h-12 w-12 rounded-full bg-green-100 text-green-600 flex items-center justify-center group-hover:scale-110 transition-transform">
                                <i class="ph ph-check-circle text-2xl"></i>
                            </div>
                            <span class="font-semibold text-gray-700 group-hover:text-green-700">Saída<br><span
                                    class="text-xs font-normal text-gray-500">(Pronto)</span></span>
                        </button>
                    </div>
                    <button onclick="showServicoForm('agendar')"
                        class="w-full mt-5 p-4 bg-gray-50 hover:bg-gray-100 rounded-xl text-gray-600 font-medium flex items-center justify-center gap-2 border border-dashed border-gray-300 hover:border-gray-400 transition-all">
                        <i class="ph ph-calendar text-xl"></i> Apenas Agendar Manutenção
                    </button>
                </div>

                <form id="formServico" class="hidden space-y-5 mt-2 animate-fade-in-up">
                    <input type="hidden" id="servicoTipoAcao">
                    <input type="hidden" id="servicoRegistroId">

                    <div id="fieldData" class="hidden">
                        <label class="block text-sm font-medium text-gray-700 mb-1">Data</label>
                        <input type="date" id="inputServicoData"
                            class="block w-full rounded-xl border-gray-300 py-2.5 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm bg-gray-50/50">
                    </div>

                    <div id="fieldKmSaida" class="hidden">
                        <label class="block text-sm font-medium text-gray-700 mb-1">Km de Saída</label>
