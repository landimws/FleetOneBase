<div class="page-container">
    <!-- Header e Ações -->
    <div class="content-header">
        <div class="header-left">
            <h1>Gerenciar Clientes</h1>
            <p>Consulte e gerencie os clientes da locadora</p>
        </div>
        <div class="header-right">
            <button id="btn-novo-cliente" class="btn-primary">
                <i class="ph ph-plus"></i> Novo Cliente
            </button>
        </div>
    </div>

    <!-- Filtros e Busca -->
    <div class="actions-bar">
        <div class="search-box">
            <i class="ph ph-magnifying-glass"></i>
            <input type="text" id="busca-cliente" placeholder="Buscar por nome ou CPF..." autocomplete="off">
        </div>
        <!-- Futuros filtros podem vir aqui -->
    </div>

    <!-- Lista de Clientes (Data Grid) -->
    <div class="table-container card">
        <table id="lista-clientes" class="data-table">
            <thead>
                <tr>
                    <th style="width: 30%;">Nome</th>
                    <th style="width: 20%;">CPF</th>
                    <th style="width: 20%;">Telefone</th>
                    <th style="width: 20%;">Cidade</th>
                    <th style="width: 5%;">Status</th>
                    <th style="width: 5%; text-align: right;">Ações</th>
                </tr>
            </thead>
            <tbody>
                <!-- Preenchido via JS -->
            </tbody>
        </table>
        <!-- Loader / Empty State (via JS) -->
    </div>
</div>

<!-- Modal de Formulário -->
<div id="modal-form-cliente" class="modal-overlay" style="display: none;">
    <div class="modal-container">
        <div class="modal-header">
            <h2 id="modal-title">Novo Cliente</h2>
            <button id="close-modal" class="modal-close">
                <i class="ph ph-x"></i>
            </button>
        </div>

        <div class="modal-body">
            <form id="form-cliente">
                <div class="form-section-title">Dados Pessoais</div>

                <div class="form-row-grid">
                    <div class="form-group full-width">
                        <label for="input-nome">Nome Completo *</label>
                        <input type="text" id="input-nome" class="form-input" placeholder="Ex: João da Silva" required>
                    </div>
                </div>

                <div class="form-row-grid">
                    <div class="form-group">
                        <label for="input-cpf">CPF</label>
                        <input type="text" id="input-cpf" class="form-input" placeholder="000.000.000-00"
                            data-mask="cpf">
                    </div>
                    <div class="form-group">
                        <label for="input-rg">RG</label>
                        <input type="text" id="input-rg" class="form-input" placeholder="Numeração">
                    </div>
                </div>

                <div class="form-row-grid">
                    <div class="form-group">
                        <label for="input-cnh">CNH</label>
                        <input type="text" id="input-cnh" class="form-input" placeholder="Numeração da CNH">
                    </div>
                    <div class="form-group">
                        <label for="input-nascimento">Data de Nascimento</label>
                        <input type="text" id="input-nascimento" class="form-input" placeholder="DD/MM/AAAA"
                            data-mask="date">
                    </div>
                </div>

                <div class="form-section-title">Contato</div>
                <div class="form-row-grid">
                    <div class="form-group">
                        <label for="input-telefone">Telefone / WhatsApp</label>
                        <input type="text" id="input-telefone" class="form-input" placeholder="(00) 00000-0000"
                            data-mask="phone">
                    </div>
                    <div class="form-group">
                        <label for="input-email">E-mail</label>
                        <input type="email" id="input-email" class="form-input" placeholder="email@exemplo.com">
                    </div>
                </div>

                <!-- Endereço Estruturado (Via Partial) -->
                <%- include('../partials/address-form', { data: {}, prefix: 'input-' }) %>

                    <div class="form-divider"></div>

                    <div class="form-group checkbox-group">
                        <label class="toggle-switch">
                            <input type="checkbox" id="input-ativo" checked>
                            <span class="slider round"></span>
                        </label>
                        <span class="toggle-label">Cadastro Ativo</span>
                    </div>

            </form>
        </div>

        <div class="modal-footer">
            <button id="btn-cancelar" class="btn-secondary">Cancelar</button>
            <button id="btn-salvar" class="btn-primary">
                <i class="ph ph-floppy-disk"></i> Salvar Cliente
            </button>
        </div>
    </div>
</div>

