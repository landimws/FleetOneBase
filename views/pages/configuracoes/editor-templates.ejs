            </div>
            <div class="modal-body">
                <div class="row h-100">
                    <!-- Painel Esquerdo: Editor -->
                    <div class="col-md-6 border-end">
                        <div class="mb-2">
                            <button id="btn-salvar-template" class="btn btn-success btn-sm">
                                <i class="bi bi-save"></i> Salvar
                            </button>
                            <button id="btn-preview" class="btn btn-info btn-sm">
                                <i class="bi bi-eye"></i> Preview
                            </button>
                        </div>
                        <div id="editor-html" style="height: 70vh; border: 1px solid #ddd;"></div>
                    </div>

                    <!-- Painel Direito: Vari√°veis + Preview -->
                    <div class="col-md-6">
                        <ul class="nav nav-tabs mb-3">
                            <li class="nav-item">
                                <a class="nav-link active" data-bs-toggle="tab" href="#tab-variaveis">Vari√°veis</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="tab" href="#tab-preview">Preview</a>
                            </li>
                        </ul>

                        <div class="tab-content">
                            <div class="tab-pane fade show active" id="tab-variaveis">
                                <div class="list-group" id="lista-variaveis">
                                    <!-- Vari√°veis dispon√≠veis -->
                                </div>
                            </div>
                            <div class="tab-pane fade" id="tab-preview">
                                <iframe id="iframe-preview"
                                    style="width: 100%; height: 70vh; border: 1px solid #ddd;"></iframe>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>