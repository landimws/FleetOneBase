        }

        .detail-value {
            font-size: 16px;
            color: #111827;
            font-weight: 500;
            line-height: 1.5;
        }

        /* Button Styles */
        .btn-primary {
            background-color: #2563eb;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            display: inline-flex;
