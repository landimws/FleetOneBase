            background: white;
            border: 1px solid #d1d5db;
            color: #374151;
            padding: 10px 20px;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s;
        }

        .btn-secondary:hover {
            background: #f9fafb;
            border-color: #9ca3af;
        }

        /* Address Styling */
        .address-container {
            display: flex;
            flex-direction: column;
            gap: 4px;
        }

        .address-street {
            font-size: 18px;
            color: #111827;
            font-weight: 600;
        }

        .address-sub {
            font-size: 15px;
            color: #4b5563;
        }

        .address-cep {
            font-size: 13px;
            color: #6b7280;
            background: #f3f4f6;
            width: fit-content;
            padding: 2px 8px;
            border-radius: 4px;
            margin-top: 4px;
            font-family: monospace;
            font-weight: 500;
        }

        /* Form Styles */
        .form-row-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-bottom: 24px;
        }

        .form-group {
            margin-bottom: 24px;
        }

        .form-group label {
            display: block;
            font-size: 14px;
            font-weight: 600;
            color: #374151;
            margin-bottom: 8px;
        }

        .form-input {
            width: 100%;
            padding: 12px;
            border: 1px solid #d1d5db;
            border-radius: 8px;
            font-size: 15px;
            color: #1f2937;
            transition: border-color 0.2s, box-shadow 0.2s;
        }

        .form-input:focus {
            border-color: #2563eb;
            outline: none;
            box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
        }
    </style>