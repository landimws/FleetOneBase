<%- include('../../../partials/settings-nav') %>

    <!-- VIEW MODE -->
    <div id="view-mode">
        <div class="content-header">
            <div class="header-left">
                <h1>Dados da Empresa</h1>
                <p>Gerencie as informações da sua locadora</p>
            </div>
            <div class="header-right">
                <button onclick="toggleEditMode(true)" class="btn-primary">
                    <i class="ph ph-pencil-simple"></i> Editar Dados
                </button>
            </div>
        </div>

        <div class="card view-card">
            <!-- Company Hero Section -->
            <div class="company-hero">
                <div class="company-icon">
                    <i class="ph ph-buildings"></i>
                </div>
                <div class="company-title">
                    <h2>
                        <%= empresa.nome %>
                    </h2>
                    <span class="company-cnpj">CNPJ: <%= empresa.cnpj || 'Não informado' %></span>
                </div>
            </div>

            <div class="view-divider"></div>

            <!-- Details Grid -->
            <div class="details-grid">
                <!-- Endereço -->
                <div class="detail-group full-width">
                    <div class="detail-label">
                        <i class="ph ph-map-pin"></i> Endereço
                    </div>
                    <div class="detail-value">
                        <% if (empresa.logradouro) { %>
                            <div class="address-container">
                                <div class="address-street">
                                    <%= empresa.logradouro %>, <%= empresa.numero || 'S/N' %>
                                </div>
                                <div class="address-sub">
                                    <%= empresa.bairro %> • <%= empresa.cidade %> - <%= empresa.estado %>
                                </div>
                                <div class="address-cep">
                                    CEP <%= empresa.cep %>
                                </div>
                            </div>
                            <% } else { %>
                                <span class="text-muted">Endereço não cadastrado</span>
                                <% } %>
                    </div>
                </div>

                <!-- Contatos -->
                <div class="detail-group">
                    <div class="detail-label">
                        <i class="ph ph-phone"></i> Telefone / WhatsApp
                    </div>
                    <div class="detail-value">
                        <%= empresa.telefone || '-' %>
                    </div>
                </div>

                <div class="detail-group">
                    <div class="detail-label">
                        <i class="ph ph-envelope"></i> E-mail
                    </div>
                    <div class="detail-value">
                        <%= empresa.email || '-' %>
                    </div>
                </div>

                <!-- Responsável -->
                <div class="detail-group full-width">
                    <div class="detail-label">
                        <i class="ph ph-user-circle"></i> Responsável Legal
                    </div>
                    <div class="detail-value">
                        <%= empresa.responsavel || '-' %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- EDIT MODE (Hidden by default) -->
    <div id="edit-mode" style="display: none;">
        <div class="content-header">
            <div class="header-left">
                <h1>Editar Empresa</h1>
                <p>Atualize os dados cadastrais</p>
            </div>
            <div class="header-right">
                <button onclick="toggleEditMode(false)" class="btn-secondary" style="margin-right: 8px;">
                    Cancelar
                </button>
                <button type="submit" form="company-form" class="btn-primary">
                    <i class="ph ph-floppy-disk"></i> Salvar Alterações
                </button>
            </div>
        </div>

        <div class="card">
            <form id="company-form" onsubmit="updateCompany(event)">
                <input type="hidden" name="id" value="<%= empresa.id %>">

                <div class="form-row-grid">
                    <div class="form-group">
                        <label>Nome da Locadora / Fantasia</label>
                        <input type="text" name="nome" value="<%= empresa.nome %>" required class="form-input">
                    </div>

                    <div class="form-group">
                        <label>CNPJ</label>
                        <input type="text" name="cnpj" value="<%= empresa.cnpj %>" class="form-input"
                            placeholder="00.000.000/0000-00" data-mask="cnpj">
                    </div>
                </div>

                <!-- Address Partial -->
                <%- include('../../../partials/address-form', { data: empresa, prefix: '' }) %>

                    <div class="form-row-grid">
                        <div class="form-group">
                            <label>Telefone / WhatsApp</label>
                            <input type="text" name="telefone" value="<%= empresa.telefone %>" class="form-input"
                                placeholder="(00) 00000-0000" data-mask="phone">
                        </div>

                        <div class="form-group">
                            <label>E-mail de Contato</label>
                            <input type="email" name="email" value="<%= empresa.email %>" class="form-input"
                                placeholder="contato@locadora.com">
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Responsável Legal</label>
                        <input type="text" name="responsavel" value="<%= empresa.responsavel %>" class="form-input">
                    </div>

            </form>
        </div>
    </div>

    <script>
        function toggleEditMode(showEdit) {
            const viewMode = document.getElementById('view-mode');
            const editMode = document.getElementById('edit-mode');

            if (showEdit) {
                viewMode.style.display = 'none';
                editMode.style.display = 'block';
            } else {
                viewMode.style.display = 'block';
                editMode.style.display = 'none';
            }
        }

        async function updateCompany(e) {
            e.preventDefault();
            const btn = document.querySelector('button[form="company-form"]');
            const originalText = btn.innerHTML;
            btn.innerHTML = '<i class="ph ph-spinner"></i> Salvando...';
            btn.disabled = true;

            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData.entries());

            try {
                const response = await fetch('/configuracoes/empresa', {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                const result = await response.json();

                if (response.ok) {
                    alert('Dados atualizados com sucesso!');
                    window.location.reload();
                } else {
                    alert('Erro: ' + (result.error || 'Erro desconhecido'));
                    btn.innerHTML = originalText;
                    btn.disabled = false;
                }
            } catch (error) {
                console.error(error);
                alert('Erro ao salvar.');
                btn.innerHTML = originalText;
                btn.disabled = false;
            }
        }
    </script>

