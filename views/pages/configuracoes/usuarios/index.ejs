        .content-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 24px;
        }

        .content-header h1 {
            font-size: 24px;
            color: #1a202c;
            margin: 0;
        }

        .content-header p {
            color: #718096;
            margin: 4px 0 0;
        }

        .badge-purple {
            background: #e9d8fd;
            color: #553c9a;
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 12px;
        }

        .badge-gray {
            background: #edf2f7;
            color: #2d3748;
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 12px;
        }

        .badge-success {
            background: #c6f6d5;
            color: #276749;
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 12px;
        }

        .badge-danger {
            background: #fed7d7;
            color: #9b2c2c;
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 12px;
        }

        .form-input {
            width: 100%;
            padding: 8px;
            border: 1px solid #e2e8f0;
            border-radius: 4px;
            box-sizing: border-box;
        }

        .btn-icon {
            background: none;
            border: none;
            cursor: pointer;
            padding: 4px;
            color: #718096;
        }

        .btn-icon:hover {
            color: #4a5568;
        }

        .btn-icon.delete:hover {
            color: #e53e3e;
        }

        /* Modal Styles */
        .modal-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            display: flex;
            align-items: center;
            /* Center vertically */
            justify-content: center;
            /* Center horizontally */
            z-index: 2000;
            /* High z-index */
        }

        .modal {
            background: white;
            padding: 24px;
            border-radius: 12px;
            width: 90%;
            max-width: 500px;
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
            margin: auto;
            /* Fallback centering */
            position: relative;
            animation: modalFadeIn 0.2s ease-out;
        }

        @keyframes modalFadeIn {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>